<%= form_for @working_day do |f| %>
  <% if @working_day.errors.any? %>
    <% @working_day.errors.full_messages.each do |error| %>
    <ul>
      <% @working_day.errors.full_messages.each do |msg| %>
      <li><%= msg  %></li>
      <% end %>
    </ul>
    <% end%>
  <% end %>

  <div class="form-group">
    <%= f.label :checkin %>
    <%= f.datetime_field :checkin, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :checkout %>
    <%= f.datetime_field :checkout, class: "form-control form-control-lg" %>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>
<% end %>